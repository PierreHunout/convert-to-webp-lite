{
    "name": "pierrehunoutplugins/wpconverttowebp",
    "description": "A WordPress plugin to convert images to WebP format.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "version": "1.0.0",
    "keywords": [
        "wordpress",
        "plugin",
        "webp",
        "image",
        "converter"
    ],
    "authors": [
        {
            "name": "Pierre Hunout",
            "email": "pierre.hunout@gmail.com"
        }
    ],
    "config": {
        "vendor-dir": "vendor",
        "allow-plugins": {
            "composer/installers": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6.2",
        "roave/security-advisories": "dev-latest",
        "sirbrillig/phpcs-variable-analysis": "^2.12.0",
        "wp-coding-standards/wpcs": "^3.1.0",
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "scripts": {
        "phpcs": [
            "phpcs"
        ],
        "phpcs:fix": [
            "phpcbf"
        ],
        "phpcs:report": [
            "phpcs --report=summary"
        ],
        "phpunit": [
            "phpunit"
        ],
        "phpunit:actions": [
            "phpunit tests/actions/"
        ],
        "phpunit:admin": [
            "phpunit tests/admin/"
        ],
        "phpunit:modes": [
            "phpunit tests/modes/"
        ],
        "phpunit:utils": [
            "phpunit tests/utils/"
        ],
        "phpunit:unit": [
            "phpunit tests/unit/"
        ],
        "phpunit:integration": [
            "phpunit tests/integration/"
        ],
        "phpunit:coverage": [
            "phpunit --coverage-html coverage/"
        ],
        "test": [
            "@phpcs",
            "@phpunit"
        ],
        "test:quick": [
            "@phpcs",
            "@phpunit:unit"
        ]
    },
    "extra": {
        "installer-name": "wp-convert-to-webp",
        "installer-paths": {
            "wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "WpConvertToWebp\\": "includes/"
        }
    }
}
